<fieldset class="list-group-item" style="background: #fafafa;">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :carro_pai_id, value: @carro.id %>
  <%= f.hidden_field :_destroy, class: 'destroy_field' %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.collection_select :carro_filho_id, Carro.all.order(nome: :asc), :id, :nome, { prompt: 'Selecione um carro' }, required: true, class: 'form-control input-large'  %>
    </div>
    <div class="col-sm-2">
  		<%= link_to '#', class: 'remove_fields pull-right' do %>
  		<i class="fa fa-times fa-3x" aria-hidden="true"></i> <% end %>
  	</div>
  </div>

</fieldset>
